<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.preetikataly.rottentomatoes" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".BoxOfficeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name=".BoxOfficeDetailActivity" />
        <activity
            android:name=".FandangoPage"
            android:label="@string/title_activity_fandango_page" >
        </activity>
        <activity
            android:name=".SimilarMovies"
            android:label="@string/title_activity_similar_movies" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FavMovies"
            android:label="@string/title_activity_fav_movies" >
        </activity>
    </application>

</manifest>
